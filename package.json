{
  "name": "initiative-tracker",
  "version": "1.0.0",
  "description": "**A comprehensive, browser-based suite of tools for tabletop RPG Game Masters**",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "format": "prettier --write \"js/**/*.js\"",
    "format:check": "prettier --check \"js/**/*.js\"",
    "build:pack": "node ./scripts/build-private-bundle.mjs",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "js/**/*.js": [
      "eslint"
    ],
    "js/modules/*.js": [
      "vitest related --run"
    ],
    "tests/**/*.js": [
      "vitest related --run"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M-ybeme/Initiative-Tracker.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/M-ybeme/Initiative-Tracker/issues"
  },
  "homepage": "https://github.com/M-ybeme/Initiative-Tracker#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "happy-dom": "^20.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "serve": "^14.2.5",
    "vitest": "^4.0.17"
  }
}
